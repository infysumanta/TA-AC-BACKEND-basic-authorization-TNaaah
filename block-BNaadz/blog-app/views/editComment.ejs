<%- include("partials/header"); %>
<div class="container py-3">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center mb-3">Edit Comment</h2>
      <div class="row justify-content-center">
        <div class="col-md-12">
          <div class="card mt-2">
            <div class="card-header"><h3>Comments</h3></div>
          </div>
          <div class="card mt-2 mb-3">
            <div class="card-body">
              <form
                autocomplete="off"
                class="form"
                role="form"
                method="post"
                action="/comments/<%= comment.id %>"
              >
                <fieldset>
                  <label class="mb-0" for="message2">Description</label>
                  <div class="row mb-1">
                    <div class="col-lg-12">
                      <textarea
                        class="form-control"
                        name="title"
                        required=""
                        rows="6"
                      >
<%= comment.title %></textarea
                      >
                    </div>
                  </div>
                  <button
                    class="btn btn-secondary btn-blolck float-right"
                    type="submit"
                  >
                    Save Comments
                  </button>
                </fieldset>
              </form>
            </div>
          </div>
        </div>

        <!--/col-->
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer"); %>
