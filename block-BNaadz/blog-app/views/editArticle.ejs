<%- include("partials/header"); %>
<div class="container py-3">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center mb-3">Create Article</h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card card-outline-secondary">
            <div class="card-header">
              <h3 class="mb-0">Article</h3>
            </div>
            <div class="card-body">
              <form
                autocomplete="off"
                class="form"
                role="form"
                method="post"
                action="/articles/<%= article.id %>"
              >
                <fieldset>
                  <label class="mb-0" for="name2">Title</label>
                  <div class="row mb-1">
                    <div class="col-lg-12">
                      <input
                        class="form-control"
                        name="title"
                        required=""
                        type="text"
                        value="<%= article.title %>"
                      />
                    </div>
                  </div>

                  <label class="mb-0" for="message2">Description</label>
                  <div class="row mb-1">
                    <div class="col-lg-12">
                      <textarea
                        class="form-control"
                        name="description"
                        required=""
                        rows="3"
                      >
<%= article.description %>
</textarea
                      >
                    </div>
                  </div>
                  <button
                    class="btn btn-secondary btn-lg btn-blolck float-right"
                    type="submit"
                  >
                    Save Article
                  </button>
                </fieldset>
              </form>
            </div>
          </div>
          <!-- /form contact -->
        </div>
        <!--/col-->
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer"); %>
