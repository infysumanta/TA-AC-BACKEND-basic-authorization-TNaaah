<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Podcast</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Podcast</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <% if(user) { %>
            <li class="nav-item">
              <% let createPodcastUrl = user.type == 'admin' ?
              "/admins/podcast/new" : "/podcasts/new" %>
              <a
                class="nav-link active"
                aria-current="page"
                href="<%= createPodcastUrl %>"
              >
                Add Podcast
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/users">
                My Podcast
              </a>
            </li>
            <% } %> <% if(user && user.type != 'admin') { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/podcasts">
                My Created Podcast
              </a>
            </li>
            <% } %>
          </ul>
          <% if(user) { %>
          <a class="btn btn-danger me-2" href="/users/logout">Logout</a>
          <% } else { %>
          <a class="btn btn-primary me-2" href="/users/login">Login</a>
          <a class="btn btn-success me-2" href="/users/register">Register</a>
          <% } %>
        </div>
      </div>
    </nav>
  </body>
</html>
